#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

readonly LOCAL_OUTPUT_ROOT="_output"
mkdir -p "${LOCAL_OUTPUT_ROOT}"
go generate pkg/version/base.go
go build -o "${LOCAL_OUTPUT_ROOT}"/dnstls cmd/dnstls/main.go

readonly current_tag=`git rev-parse HEAD`
readonly docker_image_base="miry/dnstls"
readonly docker_image="$docker_image_base:$current_tag"

docker build -t "$docker_image" .
